# -------------------------
backend/target/
backend/build/
backend/out/

# Maven specific
backend/logs/
backend/.mvn/wrapper/maven-wrapper.jar

# Gradle specific
backend/.gradle/
backend/build/
backend/gradle-app.setting
backend/*.war
backend/*.ear

# Eclipse/IDEA/VSCode junk
backend/.classpath
backend/.project
backend/.settings/
backend/.idea/
backend/.vscode/

# Other Java stuff
*.iml
*.class
*.jar
*.war
*.ear

